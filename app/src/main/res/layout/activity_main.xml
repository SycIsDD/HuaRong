<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".MainActivity">


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/chooseGame"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:onClick="selectGame"
        android:text="选择关卡"
        android:textAppearance="@style/QMUITextAppearance"
        android:textColor="@color/colorViewBackground"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getRank"
        app:qmui_backgroundColor="@color/colorButton"
        app:qmui_borderColor="@color/colorButton"
        app:qmui_radiusBottomLeft="30dp"
        app:qmui_radiusBottomRight="30dp"
        app:qmui_radiusTopLeft="30dp"
        app:qmui_radiusTopRight="30dp" />


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/getRank"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:onClick="getRank"
        android:text="获取排名"
        android:textAppearance="@style/QMUITextAppearance"
        android:textColor="@color/colorViewBackground"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:qmui_backgroundColor="@color/colorButton"
        app:qmui_borderColor="@color/colorButton"
        app:qmui_radiusBottomLeft="30dp"
        app:qmui_radiusBottomRight="30dp"
        app:qmui_radiusTopLeft="30dp"
        app:qmui_radiusTopRight="30dp" />


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/resumeGame"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:onClick="resumeGame"
        android:text="继续游戏"
        android:textAppearance="@style/QMUITextAppearance"
        android:textColor="@color/colorViewBackground"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseGame"
        app:qmui_backgroundColor="@color/colorButton"
        app:qmui_borderColor="@color/colorButton"
        app:qmui_radiusBottomLeft="30dp"
        app:qmui_radiusBottomRight="30dp"
        app:qmui_radiusTopLeft="30dp"
        app:qmui_radiusTopRight="30dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="349dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bighead" />

    <com.qmuiteam.qmui.widget.QMUIVerticalTextView
        android:id="@+id/gameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:shadowColor="@color/qmui_config_color_gray_7"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1"
        android:text="回家的诱惑"
        android:textColor="@color/colorViewBackground"
        android:textSize="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
